
@{
    ViewBag.Title = "Asset Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Menu {
    @Scripts.Render("~/Scripts/MIS/Asset/menu")
}
@Styles.Render("~/AdminLTE/plugins/datatables/css")
@Styles.Render("~/Content/Map/OLStyle")
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="form-group" style="display:inline-block;">
                    <label class="col-md-3 control-label" style="padding-top:.5em;">Zone</label>
                    <div class="col-md-9">
                        <select class="form-control">
                            <option value="1">Isaneswar Basti</option>
                            <option value="2">Kalinga Nagar</option>
                            <option value="3">Saheed Nagar</option>
                        </select>
                    </div>
                </div>
                <div class="form-group" style="display:inline-block;">
                    <label class="col-md-5 control-label" style="padding-top:.5em;">Asset Type</label>
                    <div class="col-md-7">
                        @Html.DropDownList("AllAssets", (IEnumerable<SelectListItem>)ViewData["AllAssets"], new { @class = "form-control bbsrasset" })
                    </div>
                </div>
                <div class="form-group" style="display:inline-block;">
                    <label class="col-md-5 control-label" style="padding-top:.5em;">Installation Year</label>
                    <div class="col-md-7">
                        <input id="txtInstallYear" class="form-control numeric" style="width:12em;" />
                    </div>
                </div>
                <div class="form-group" style="display:inline-block;">
                    <div class="col-md-12">
                        <input type="button" class="btn btn-primary btn-Report" id="btnViewAssetInfo" value="View" />
                    </div>
                </div>
                <div class="form-group" style="display:inline-block;">
                    <div class="col-md-12">
                        <img src="~/Content/Img/ajax-loader.gif" class="loading-indicator" style="display:none;margin-top:-1em;" />
                    </div>
                </div>
            </div>
            <div class="box-body" id="divTableDataAssetInfo"></div>
        </div>

    </div>
</div>
<!-- Map Modal -->
<div class="modal fade" id="mapModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Consumer Location</h4>
            </div>
            <div class="modal-body">
                <div>
                    <div style="width: 100%; height: 500px;" id="map"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    @Scripts.Render("~/Scripts/MIS/Asset/data")
    @Scripts.Render("~/Scripts/Map/OLJS")
    @Scripts.Render("~/Scripts/Map/ModalPop")
}